@model BeerOverflow.Web.Models.BeerReviewEditViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .fa-star {
            color: gainsboro
        }

        .checked {
            color: orange;
        }
    </style>
</head>

<h1>Review beer</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BeerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BeerName)

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlcByVol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlcByVol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BeerType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BeerType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brewery)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brewery)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvgRating)
        </dt>
        <dd class="col-sm-10">
            @if (Model.AvgRating == 0)
            {
                <p class="text-secondary">Not rated</p>
            }
            else
            {
                @for (int i = 0; i < @Model.AvgRating; i++)
                {
                    <span class="fa fa-star checked"></span>
                }
                @for (int i = (int)@Model.AvgRating; i < 5; i++)
                {
                    <span class="fa fa-star"></span>
                }
            }
        </dd>
        <br></br>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeletedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeletedOn)
        </dd>
    </dl>

</div>
<div>
    <a asp-controller="Beers" asp-action="Details" asp-route-id="@Model.BeerId">Back to List</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="BeerReview" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="@Model.IsDeleted" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Delete review
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RMessage" class="control-label"></label>
                <textarea asp-for="RMessage" class="form-control"></textarea>
                <span asp-validation-for="RMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                @for (int i = 0; i < @Model.AvgRating; i++)
                {
                    <span class="fa fa-star checked"></span>
                }
                @for (int i = (int)@Model.AvgRating; i < 5; i++)
                {
                    <span class="fa fa-star"></span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


























